@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}
<h4>Trang chỉnh sửa sản phẩm</h4>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label >Name</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" id="Name" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>category</label>
        <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories">
        <option>--choose a category</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label>brad</label>
        <select asp-for="Brad" class="form-control" asp-items="ViewBag.Brands">
            <option>--choose a Brands</option>
        </select>
        <span asp-validation-for="Brad" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImageUpload" class="form-control" id="Name" />
        <span asp-validation-for="ImageUpload" class="text-danger"></span>
        <img src="~/media/products/@Model.Image" width="120" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>

</form>
<a asp-action="Index"> quay trở lại trang danh sách sản phẩm</a>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
